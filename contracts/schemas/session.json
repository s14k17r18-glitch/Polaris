{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/session.json",
  "title": "Session",
  "type": "object",
  "properties": {
    "session_id": { "type": "string", "description": "UUIDv7" },
    "created_at": { "type": "string", "format": "date-time" },
    "theme": { "type": "string" },
    "constraints": { "type": ["object", "null"] },
    "participants": { "type": "array", "items": { "type": "object" } },
    "moderator_persona_id": { "type": ["string", "null"], "description": "UUIDv7" },
    "rounds_max": { "type": "integer" },
    "ended_reason": { "type": ["string", "null"] },
    "schema_version": { "type": "integer" },
    "owner_user_id": { "type": "string" },
    "device_id": { "type": "string" },
    "rev": { "type": ["string", "number"] },
    "updated_at": { "type": "string", "format": "date-time" },
    "deleted_at": { "type": ["string", "null"], "format": "date-time" }
  },
  "required": [
    "session_id",
    "created_at",
    "theme",
    "participants",
    "rounds_max",
    "schema_version",
    "owner_user_id",
    "updated_at",
    "rev"
  ]
}
